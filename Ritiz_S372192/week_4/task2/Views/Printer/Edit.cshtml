@model BookStoreApp.DAL.Printer
@{
    ViewData["Title"] = "Edit Printer";
}
<h1>Edit Printer</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label"></label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Brand" class="form-label"></label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</form>
