@model IEnumerable<MovieTheatre.Models.Movie>

@{
    ViewData["Title"] = "Movies";
}

<div class="max-w-7xl mx-auto px-4 py-10">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">🎬 All Movies</h2>
        <a asp-action="Create" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded shadow">
            + Add Movie
        </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        @foreach (var movie in Model)
        {
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="h-60 overflow-hidden">
                    @if (!string.IsNullOrEmpty(movie.PosterPath))
                    {
                        <img src="@movie.PosterPath" alt="@movie.Name Poster" class="w-full h-full object-cover" />
                    }
                    else
                    {
                        <div class="w-full h-full flex items-center justify-center bg-gray-100 text-gray-400">
                            No Image
                        </div>
                    }
                </div>

                <div class="p-4 space-y-2">
                    <h3 class="text-lg font-semibold text-gray-800">@movie.Name</h3>
                    <p class="text-sm text-gray-600"><strong>Director:</strong> @movie.Director</p>
                    <p class="text-sm text-gray-600"><strong>Release:</strong> @movie.ReleaseDate.ToShortDateString()</p>
                    <p class="text-sm text-gray-600"><strong>Language:</strong> @movie.Language</p>
                    <p class="text-sm text-gray-600"><strong>Category:</strong> @movie.Category?.Name</p>

                    <div class="flex justify-between mt-3">
                        <a asp-action="Edit" asp-route-id="@movie.Id" class="text-indigo-600 hover:underline text-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.Id" class="text-red-600 hover:underline text-sm">Delete</a>
                        <a asp-action="Details" asp-route-id="@movie.Id" class="text-gray-700 hover:underline text-sm">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
