@model MovieTheatre.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="max-w-xl mx-auto py-10 px-4">
    <h2 class="text-2xl font-bold mb-6 text-gray-800">âž• Create Category</h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <div>
            <label asp-for="Name" class="block font-medium text-gray-700 mb-1">Name</label>
            <input asp-for="Name" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:border-indigo-500" />
            <span asp-validation-for="Name" class="text-sm text-red-600"></span>
        </div>

        <div>
            <label asp-for="Code" class="block font-medium text-gray-700 mb-1">Code</label>
            <input asp-for="Code" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring focus:border-indigo-500" />
            <span asp-validation-for="Code" class="text-sm text-red-600"></span>
        </div>

        <div class="flex items-center gap-4">
            <button  type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-6 py-2 rounded-md shadow">Save</button>
            <a asp-action="Index" class="text-gray-700 hover:underline">Cancel</a>
        </div>
    </form>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>