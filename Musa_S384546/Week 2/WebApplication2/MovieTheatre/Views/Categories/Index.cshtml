@model IEnumerable<MovieTheatre.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="max-w-6xl mx-auto px-4 py-10">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-gray-900">ðŸŽ­ Categories</h2>
        <a class="bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-md shadow"
           asp-action="Create">
            + Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
            <thead class="bg-gray-200 text-gray-700">
            <tr>
                <th class="text-left text-sm font-semibold px-6 py-3">Name</th>
                <th class="text-left text-sm font-semibold px-6 py-3">Code</th>
                <th class="text-right text-sm font-semibold px-6 py-3">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {
                <tr class="border-b border-gray-100 hover:bg-gray-50">
                    <td class="px-6 py-4 text-gray-800">@category.Name</td>
                    <td class="px-6 py-4 text-gray-800">@category.Code</td>
                    <td class="px-6 py-4 text-right space-x-2">
                        <a asp-action="Edit" asp-route-id="@category.Id"
                           class="text-blue-600 hover:text-blue-800 font-medium">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id"
                           class="text-red-600 hover:text-red-800 font-medium">Delete</a>
                        <a asp-action="Details" asp-route-id="@category.Id"
                           class="text-gray-700 hover:text-gray-900 font-medium">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>