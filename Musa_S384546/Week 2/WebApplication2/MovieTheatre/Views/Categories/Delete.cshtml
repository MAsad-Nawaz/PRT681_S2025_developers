@model MovieTheatre.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="max-w-xl mx-auto py-10 px-4">
    <h2 class="text-2xl font-bold text-red-700 mb-6">üóëÔ∏è Delete Category</h2>

    <div class="bg-white border border-gray-200 rounded-lg shadow-md p-6 space-y-4">
        <p class="text-gray-800 text-lg">Are you sure you want to delete this category?</p>

        <div class="text-gray-700">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Code:</strong> @Model.Code</p>
        </div>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="flex items-center gap-4 mt-6">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-md shadow">
                    Delete
                </button>
                <a asp-action="Index" class="text-gray-700 hover:underline">Cancel</a>
            </div>
        </form>
    </div>
</div>