@model TodoMvc.Models.Todo
@{
    ViewData["Title"] = "Edit";
}
<h1 class="mt-3">Edit</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedUtc" />
    <div class="mb-3">
        <label asp-for="Text" class="form-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="Done" />
        <label class="form-check-label" asp-for="Done"></label>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
