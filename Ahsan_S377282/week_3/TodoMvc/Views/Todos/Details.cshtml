@model TodoMvc.Models.Todo
@{
    ViewData["Title"] = "Details";
}
<h1 class="mt-3">Details</h1>
<div class="mb-3"><strong>Text:</strong> @Model.Text</div>
<div class="mb-3"><strong>Done:</strong> @(Model.Done ? "✔" : "—")</div>
<div class="mb-3"><strong>Created (UTC):</strong> @Model.CreatedUtc.ToString("u")</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</p>
